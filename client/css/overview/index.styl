#overview
	float 					right
	height 					100%
	width 					40%
	overflow 				hidden
	background 				url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAYAAACNMs+9AAAAO0lEQVQYV2P00hP9zwAEDsrcIIrhwN2vYBqdz0i0wq5ABbCJuEyCmcxItEKirSZaIdFWE62QaKuJVQgAji1NO0/1Ts0AAAAASUVORK5CYII=') repeat
	box-shadow 				-2px 0 0 $white

	#stats
		margin 				20px 20px 100px 20px
		text-align 			left
		font-size 			130%
		h2
			margin-bottom 	25px
			padding 		10px
			background-color $white
			text-align 		center			
			font-size 		300%
			text-shadow 	5px 5px 0px white
			box-shadow		5px 5px 0 rgba(255,255,255,.5)
		.stat
			box-shadow		5px 5px 0 rgba(255,255,255,.5)
			background-color $white
			padding 		5px 10px
			margin-bottom 	10px
		.key
			display 		inline-block
			font-weight 	bold
			width 			40%
		.value
			font-style 		italic

	#competition
		margin 				20px
		height 				220px
		box-shadow		5px 5px 0 rgba(255,255,255,.5)

		.preview_boat
			height 			10px
			width 			5px
			background-color $red

		.markers
			width 			100%
			height 			100%
			position		relative
			background-color $white

			.marker
				width 		100%
				position 	absolute

			for iterator in 1 2 3 4 5 6
				.marker:nth-child({iterator})
					bottom	20%*(iterator - 1)

			.line
				float 		right
				width 		80%
				height 		2px
				background-color white

			.value
				font-size 	130%
				float 		left