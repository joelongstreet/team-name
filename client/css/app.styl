@import 'nib'
@import 'animation'
@import 'globals'

@import 'fireworks'
@import 'game'
@import 'login'
@import 'remote'


body, html
    height 100%


h1, h2, h3, h4, h5, h6, p, span, div, input
    font-family 	"Silkscreen"


body
    font normal 1em sans-serif
    background $blue url($water) repeat
    &.wave
        background $blue url($water2) repeat


input
    font-size       170%
    padding         15px
    background-color $white
    border          none
    box-shadow      5px 5px 0 rgba(255,255,255,.5)


header.intro
    background      url($dirt) repeat
    width           100%
    height          120px

    h1
        color       $white
        text-shadow 4px 4px 0px $red
        font-size   500%
        padding-top 15px
        text-align  center

    .trees
        background  url($trees_upright) repeat
        width       100%
        height      90%

footer
    height          50px
    background      url($dirt) repeat
    .trees
        background  url($trees_upright) repeat
        width       100%
        height      90%
    p 
        background-color $white
        display     inline-block
        float       right
        margin      10px
        padding     7px