.boat
    top                     35%
    left                    7%
    margin                  auto
    width                   20%
    background              $orange url($boat) repeat
    box-shadow              6px 6px 0 $orange2
    position                relative
    transition              .5s all ease-out
    padding                 15px
    opacity                 0

    .name
        position            absolute
        left                -50%
        top                 50%
        width               200%
        margin-top          50px
        color               rgba(0,0,0,.5)
        transform           rotateZ(90deg)
        font-size           150%


    //reminder - place head directly in ass
    .head, .ass
        position            absolute
        top                 -110px
        height              100px
        width               100%
        left                -2px

        div
            background      $orange url($boat) repeat
            box-shadow      6px 6px 0 $orange2
            margin          auto
            height          25px
            &.one
                width       10%
            &.two
                width       30%
            &.three
                width       50%
            &.four
                width       70%
            &.five
                box-shadow  6px 0px 0 $orange2
                width       95%

    .ass
        top                 auto
        bottom              -125px
        transform           rotateZ(180deg)
        div
            box-shadow      -6px 6px 0 $orange2
            &.five
                box-shadow  -6px 0px 0 $orange2

    &.start
        top                 70%

    &.row
        top                 10%

    &.hide
        top                 -100%
        opacity             0

    &.show
        opacity             1

    &.two
        height              40%
        .person
            top             50%

    &.four
        height              150px
        for row in 1 2 3 4
            .person:nth-child({row})
                if row%2 == 0
                    top     25%*(row - 1)
                else
                    top     25%*row

    &.six
        height              200px
        for row in 1 2 3 4 5 6
            .person:nth-child({row})
                if row%2 == 0
                    top     16%*(row - 1)
                else
                    top     16%*row

    &.eight
        height              250px
        for row in 1 2 3 4 5 6 7 8
            .person:nth-child({row})
                if row%2 == 0
                    top     12%*(row - 1)
                else
                    top     12%*row

    .person
        position            absolute
        background          $white url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAUAAAAFCAYAAACNbyblAAAAJ0lEQVQIW2P8DwSMQMAABDA2mIMsAGIzgmTBDCDAUAnTAVaAzIGxAd+PFAbCvk4QAAAAAElFTkSuQmCC') repeat
        box-shadow          4px 4px 0 $red2
        width               35px
        height              35px
        left                10%
        transition          .5s all ease-out

        .full
            background-color $grey
            width           90%
            height          90%

        &.sweat
            background-color $red

        .ore
            position            relative
            left                -85px
            top                 17px

            &.row
                animation       row_ore 1.5s

            &.right.row
                animation       row_ore_right 1.5s

            &.lose
                animation       lose_ore 1.5s

            .handle
                position        absolute
                width           75px
                height          6px
                background      $red url($red_pattern) repeat
                box-shadow      2px 2px 0 $red2
            .paddle
                position        absolute
                margin-left     -35px
                margin-top      -5px
                width           45px
                height          25px
                background      $red url($red_pattern) repeat
                box-shadow      2px 2px 0 $red2

        &:nth-child(even)
            left                auto
            right               10%

            .ore
                left            auto
                right           -45px
                .paddle
                    margin-left 0
                    margin-right -75px
                    left        auto
                    right       0