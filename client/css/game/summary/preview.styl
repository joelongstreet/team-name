#preview
    color                   $brown
    margin                  20px
    height                  220px
    box-shadow              5px 5px 0 rgba(255,255,255,.5)

    #boats
        margin-left         50px
        margin-top          -20px
        position            relative

        for iterator in 1 2 3 4 5 6
            .mini_boat:nth-child({iterator})
                left        15%*iterator

    .markers
        height              100%
        padding             10px
        position            relative
        background-color    $white

        .marker
            width           100%
            position        absolute
            margin-bottom   15px

        for iterator in 1 2 3 4 5 6
            .marker:nth-child({iterator})
                bottom      15%*(iterator - 1)
 
        .line
            float           right
            margin-right    10%    
            width           70%
            height          1px
            box-shadow      1px 1px 0 $grey
            background-color $brown

        .value
            font-size       130%
            float           left
            margin-top      -5px