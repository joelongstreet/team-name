@import 'boat'
@import 'sideline'
@import 'summary'

#watching
    position                relative
    float                   left
    width                   60%
    height                  100%
    overflow                hidden

#waiting
    display             none
    top                 0
    left                0
    width               100%
    height              100%
    text-align          center
    color               $white
    font-size           250%
    line-height         180%
    padding-top         50px
    background          $red url($red_pattern) repeat

#starting_line, #finish_line
    background              url($checks) repeat
    height                  20px
    position                absolute
    width                   100%
    top                     80%
    transition              .5s all

    &.go_away
        top                 120%

#finish_line
    top                     -20%
    transition              3s all
    &.show
        top                 120%

#countdown
    top                     30%
    width                   100%
    color                   $white
    margin                  auto
    position                absolute
    font-size               900%
    text-align              center
    transition              .05s all
    text-shadow             5px 5px 0 $red

    &.flash
        color               $red
        font-size           1500%

    .waiting
        font-size           50%

#checkered_flag
    display                 none
    z-index                 5
    position                absolute
    top                     10%
    width                   100%
    height                  100%
    
    .wrap
        position            absolute
        width               80%
        right               20%
        height              70%
        transition          .75s all linear
        transform           rotateZ(-25deg)
        transform-origin    80% 100%

    .flag
        position            absolute
        width               60%
        height              40%
        right               0
        background          url($checks) repeat
        box-shadow          -5px 5px 0 rgba(255,255,255,.5)
        
    .pole
        position            absolute
        right               0
        width               5%
        bottom              0
        height              60%
        background-color    $brown
        box-shadow          -4px 4px 0 rgba(255,255,255,.5)

    &.wave
        .wrap
            transform       rotateZ(25deg)

h1#row
    color                   $white
    position                absolute
    font-size               500%
    top                     25px
    left                    7.5%
    width                   100%
    height                  100%
    opacity                 .05
    text-align              center

    &.call
        animation           blow_up .25s