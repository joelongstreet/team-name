body#login.mobile

    h1
        font-size   300% !important

    section.main
        margin      20px auto
        width       80%
        text-align  center

    h2
        color       $white
        font-size   120%

    .code
        display     block
        color       $red
        margin      20px 0
        font-size   150%

    p
        color       $white

    footer
        display     none

    .btn
        font-size   250%

    .playing
        top         0
        left        0
        display     none
        width       100%
        height      100%
        text-align  center
        font-size   150%
        padding-top 50px
        background      $red url($red_pattern) repeat
        position        absolute
        &.show
            display block