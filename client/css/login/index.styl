@import 'desktop'
@import 'mobile'

body#login

    header.intro
        background      url($dirt) repeat
        width           100%
        height          120px

        h1
            color       $white
            text-shadow 4px 4px 0px $red
            font-size   500%
            padding-top 15px
            text-align  center

        .trees
            background  url($trees_upright) repeat
            width       100%
            height      90%

    footer
        height          50px
        background      url($dirt) repeat
        .trees
            background  url($trees_upright) repeat
            width       100%
            height      90%
        p 
            background-color $white
            display     inline-block
            float       right
            margin      10px
            padding     7px